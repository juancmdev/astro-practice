<style>
    .button:hover {
    background: white;
    color: black;
    border: 1px solid black;
  }

    .container-card {
        position: relative;
        width: 280px;
        height: 450px;
    }
    .background {
        background-color: grey;
        width: 280px;
        height: 450px;
        position: absolute;
        top: 0;
        left: 0px;
        opacity: 0.5;
        filter: blur(1px);
        border-radius: 20px;
    }

    .title {
        position: absolute;
        top: 30px;
        /* background: antiquewhite; */
        width: 100%;
        text-align: center;
        color: white;
    }

    .img-robot {
        position: absolute;
        top: 80px;
        /* background: antiquewhite; */
        width: 100%;
        display: flex;
        justify-content: center;

        & img {
            display: block;
        }
    }

    .container-buttons {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        width: 100%;
        height: 10%;
        position: absolute;
        bottom: 40px;
        left: 0;
        /* background: antiquewhite; */
    }


</style>