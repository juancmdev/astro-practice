---
import Button from "./Button.astro";

---
<section class="container-card">
    <div class="background">
        
    </div>

    <h1 class="title">PRODUCTO</h1>

    <div class="img-robot">
        <img src="/img/robot.jpg" alt="img robot">
    </div>

    <div class="container-buttons">
        <Button text={"Detalles"} bgcolor={"blue"} color={"white"}/>
        <Button text={"Comprar"} bgcolor={"purple"}/>
    </div>

